<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    tools:context=".view.AssineJaActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="66dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/imagem_clube_ass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Assinantes tem os Melhores Descontos
com as Melhores Marcas!"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="328dp"
            android:layout_height="199dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="111dp"
            android:background="@drawable/background_clube_ass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:layout_marginBottom="143dp"
            android:layout_marginEnd="180dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="180dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_onodera"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView21" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="127dp"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="23dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/logo_marisa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toEndOf="@+id/imageView22"
            app:layout_constraintTop_toTopOf="@+id/imageView21"
            app:layout_constraintVertical_bias="0.022" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="126dp"
            android:layout_height="23dp"
            android:layout_marginBottom="91dp"
            android:layout_marginEnd="179dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="179dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/logo_onofre"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toBottomOf="@+id/imageView22" />

        <ImageView
            android:layout_width="126dp"
            android:layout_height="16dp"
            android:layout_marginBottom="94dp"
            android:layout_marginEnd="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="23dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="31dp"
            android:src="@drawable/logo_saraiva"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            app:layout_constraintStart_toEndOf="@+id/imageView24"
            app:layout_constraintTop_toBottomOf="@+id/imageView23" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="149dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Além desses parceiros, você tem outros
benefícios disponiveis no clube :)"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView21"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="127dp"
            android:layout_marginLeft="127dp"
            android:layout_marginRight="127dp"
            android:layout_marginStart="127dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Não é assinante?"
            android:textColor="#555555"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/btn_assine_clube_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView21" />

        <Button
            android:id="@+id/btn_assine_clube_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/background_edicao_mes"
            android:text="ASSINE JÁ"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="46dp"
            android:layout_marginEnd="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Faça sua assinatura e aproveite a variedade
de beneficios especiais para você"
            android:textColor="#555555"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_assine_clube_id" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>