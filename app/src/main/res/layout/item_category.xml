<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_item_category"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/text_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="kkkkkkkkkkkkkkk"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_item_category"
        app:layout_constraintEnd_toEndOf="@+id/imageView_item_category"
        app:layout_constraintStart_toStartOf="@+id/imageView_item_category"
        app:layout_constraintTop_toTopOf="@+id/imageView_item_category" />

    <ProgressBar
        android:id="@+id/progressBar_item_category"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_item_category"
        app:layout_constraintEnd_toEndOf="@+id/imageView_item_category"
        app:layout_constraintStart_toStartOf="@+id/imageView_item_category"
        app:layout_constraintTop_toTopOf="@+id/imageView_item_category" />

</android.support.constraint.ConstraintLayout>